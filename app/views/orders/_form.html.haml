= form_for @order do |f|
  - if @order.errors.any?
    #error_explanation
      %h2= "#{pluralize(@order.errors.count, "error")} prohibited this order from being saved:"
      %ul
        - @order.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :snippet_id
    = f.number_field :snippet_id
  .field
    = f.label :user_id
    = f.number_field :user_id
  .field
    = f.label :amount
    = f.text_field :amount
  .field
    = f.label :usd_amount
    = f.text_field :usd_amount
  .field
    = f.label :coinbase_id
    = f.text_field :coinbase_id
  .field
    = f.label :coinbase_code
    = f.text_field :coinbase_code
  .actions
    = f.submit 'Save'
